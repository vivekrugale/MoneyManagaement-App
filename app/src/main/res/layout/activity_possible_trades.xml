<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/downblocks"
    tools:context=".PossibleTrades">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E3D5D5"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STOCKS"
                android:textAlignment="center"
                android:textColor="#7D2F83"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Entry Price"
                android:textAlignment="center"
                android:textColor="#7D2F83"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Stop Loss"
                android:textAlignment="center"
                android:textColor="#7D2F83"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="Risk"
                android:textAlignment="center"
                android:textColor="#7D2F83"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:text="Quantity"
                android:textAlignment="center"
                android:textColor="#7D2F83"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextStock1"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:ems="0"
                android:hint="Stock 1"
                android:inputType="text|textCapCharacters"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextEntryPrice1"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:ems="0"
                android:hint="Entry"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextSL1"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:ems="0"
                android:hint="Stop Loss"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewRISK1"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#373030" />

            <TextView
                android:id="@+id/textViewQUA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#373030" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextStock2"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:ems="0"
                android:hint="Stock 2"
                android:inputType="text|textCapCharacters"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextEntryPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="0"
                android:hint="Entry"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextSL2"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:ems="0"
                android:hint="Stop Loss"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewRISK2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#373030" />

            <TextView
                android:id="@+id/textViewQUA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#373030" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextStock3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="0"
                android:hint="Stock 3"
                android:inputType="text|textCapCharacters"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextEntryPrice3"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:ems="1"
                android:hint="Entry"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextSL3"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:ems="1"
                android:hint="Stop Loss"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#373030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewRISK3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#373030" />

            <TextView
                android:id="@+id/textViewQUA3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#373030" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possible Trades"
        android:textAllCaps="false"
        android:textColor="#10687E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <Button
        android:id="@+id/btnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="CLICK"
        android:textColor="#6A4F18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />

    <Button
        android:id="@+id/btnPcad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All Data"
        android:textColor="#6A3613"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClick" />
</androidx.constraintlayout.widget.ConstraintLayout>